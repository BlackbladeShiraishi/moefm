<FindBugsFilter>

    <!-- don't need to set serialVersionUID in Groovy Closure -->
    <Match>
        <Class name="~.*_closure\d+"/>
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
    </Match>

    <!-- ignore EC_UNRELATED_TYPES_USING_POINTER_EQUALITY of code generated by @groovy.transform.ToString -->
    <Match>
        <Source name="~.*\.groovy"/>
        <Method name="toString" params="" returns="java.lang.String"/><!-- with @groovy.transform.ToString -->
        <Bug pattern="EC_UNRELATED_TYPES_USING_POINTER_EQUALITY"/>
    </Match>

</FindBugsFilter>
